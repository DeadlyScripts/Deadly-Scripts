-- Deadly Scripts - Player Join/Leave Notification
-- Credits: Deadly Scripts

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local StarterGui = game:GetService("StarterGui")

-- Function to show notification
local function showNotification(title, text)
    StarterGui:SetCore("SendNotification", {
        Title = title;
        Text = text;
        Duration = 5; -- duration in seconds
    })
end

-- When a player joins
Players.PlayerAdded:Connect(function(newPlayer)
    showNotification("ðŸšª Player Joined", newPlayer.Name .. " has joined the server")
end)

-- When a player leaves
Players.PlayerRemoving:Connect(function(leavingPlayer)
    showNotification("ðŸšª Player Left", leavingPlayer.Name .. " has left the server")
end)

-- Small GUI for credits
local ScreenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 200, 0, 40)
Frame.Position = UDim2.new(0.5, -100, 0.9, 0)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.BackgroundTransparency = 0.3
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true -- movable frame

local TextLabel = Instance.new("TextLabel", Frame)
